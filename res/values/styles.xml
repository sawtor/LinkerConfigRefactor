<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--All Activity is transparent style.-->
    <style name="activity_transparent" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="text_styler">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">#ffff00</item>
    </style>



    <style name="Theme_TransparentDialog1">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="text_24_b">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#bbbbbb</item>
    </style>

    <style name="text_24_f">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_30_f">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_30_b">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#bbbbbb</item>
    </style>

    <style name="text_24_d">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#dddddd</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="text_40_f">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="text_36_b">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#bbbbbb</item>
    </style>

    <style name="text_36_d">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#dddddd</item>
    </style>

    <style name="text_48_f">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

	<style name="SourceListDialogStyle" parent="android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>
</resources>
